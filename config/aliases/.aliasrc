# Personal Aliases
command -v nala >/dev/null 2>&1 && {
  function npt {
      if [ "$1" = "i" ]; then
        sudo nala install "${@:2}"
      fi
      if [ "$1" = "u" ]; then
        sudo nala update "${@:2}"
      fi
      if [ "$1" = "ug" ]; then
        sudo nala upgrade "${@:2}"
      fi
      if [ "$1" = "s" ]; then
        sudo nala search "${@:2}"
      fi
      if [ "$1" = "r" ]; then
        sudo nala remove "${@:2}"
      fi
  }
}
function tmux_init() {
if [ "$TERM_PROGRAM" = tmux ]; then
  tmux kill-session -t MAIN;
else
  tmux new-session -As MAIN;
fi
}

command -v nvim >/dev/null 2>&1 && {
  alias vi="nvim"
  alias vim="nvim"
}
